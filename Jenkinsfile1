
pipeline {
  agent { label 'sonar-node' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') { 
            steps {
                sh 'git clone https://github.com/spring-projects/spring-petclinic.git'
                sh 'cd spring-petclinic'
                sh './mvnw clean'
                sh './mvnw package'
            }
        }

    stage('Run') { 
            steps {
                sh 'java -jar target/*.jar'
            }
        }
}
}
